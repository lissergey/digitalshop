<h1>Перегляд користувачів</h1>

<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Ім'я</th>
    <th>Email</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td> <%= user.id %></td>
        <td> <%= user.name %></td>
        <td> <%= user.email %></td></td>
      </tr>
  <% end %>
  </tbody>
</table>
