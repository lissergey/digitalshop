<h3>Зворотній зв'язок</h3>
  <%= form_for(@contact) do |f| %>

      <div class="form-group">
        <%= f.label "Ім'я" %><br>
        <%= f.text_field :name, size: 40, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label 'Email' %><br>
        <%= f.text_field :email, size: 40, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label 'Повідомлення' %><br>
        <%= f.text_area :message, rows: "10", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Надіслати', class: "btn btn-success"%>
      </div>
  <% end %>



